{
  "name": "boilerplate-webpack-react-js_ts_test-toolkit",
  "version": "1.0.0",
  "description": "It's a boilerplate for usage of react (with hooks) with pure JS in a future project (FSD architecture prior with Webpack). Check out the docs below to be in actual tune!",
  "main": "index.jsx",
  "type": "module",
  "scripts": {
    "lint": "npx eslint ./src --ignore-path ./configs/eslint/.eslintignore --config ./configs/eslint/.eslintrc.cjs",
    "lint:fix": "npx eslint ./src --ignore-path ./configs/eslint/.eslintignore --config ./configs/eslint/.eslintrc.cjs --fix",
    "prettier": "npx prettier ./src --check --ignore-path ./configs/prettier/.prettierignore --config ./configs/prettier/prettier.config.js",
    "prettier:fix": "npx prettier ./src --write --ignore-path ./configs/prettier/.prettierignore --config ./configs/prettier/prettier.config.js",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prepare": "husky",
    "start": "webpack-dev-server --config ./configs/webpack/webpack.config.js --progress",
    "dev": "webpack --config ./configs/webpack/webpack.config.js --node-env=development --progress",
    "build": "webpack --config ./configs/webpack/webpack.config.js --node-env=production --progress",
    "test-boilerplate": "npm run dev && npm run build && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dmitriy-Frostoff/boilerplate-webpack-react-js"
  },
  "keywords": [
    "webpack",
    "html",
    "scss",
    "css-modules",
    "js",
    "components",
    "FSD",
    "react"
  ],
  "author": "Dmitriy Frostoff",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dmitriy-Frostoff/boilerplate-webpack-react-js/issues"
  },
  "homepage": "https://github.com/Dmitriy-Frostoff/boilerplate-webpack-react-js?tab=readme-ov-file#readme",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-loader": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "image-minimizer-webpack-plugin": "^4.0.2",
    "imagemin": "^9.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^11.0.1",
    "mini-css-extract-plugin": "^2.9.0",
    "prettier": "^3.3.2",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.77.7",
    "sass-loader": "^14.2.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
